<layout id="root" fillParent="true" xmlns="dynLayout">
	<table fillParent="true">
		<row>
			<cell colspan="2" fillX="" align="Align.center">
				<scroll>
					<table id="list" class="unknow.kyhtanil.client.graphics.CharList" />
				</scroll>
			</cell>
		</row>
		<row>
			<cell expandX="">
				<button text="i18n.get('dialog_create')" onchange="main.show(Screen.CHARCREATE)" />
			</cell>
			<cell expandX="">
				<button text="i18n.get('dialog_login')" disabled="state.chars==null" onchange="co.logChar(state.uuid, $list.selected())" />
			</cell>
		</row>
	</table>
</layout>