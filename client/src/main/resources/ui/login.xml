<layout fillParent="true" xmlns="dynLayout" onkeypress="if(e.getKeyCode()==com.badlogic.gdx.Input.Keys.ENTER) {co.login($login.getText(), $pass.getText());}">
	<table fillParent="true" id="table" init="$table.defaults().pad(1)">
		<row>
			<cell colspan="2">
				<label id="info" />
			</cell>
		</row>
		<row>
			<cell>
				<label text="I18N.get('field_login')" />
			</cell>
			<cell>
				<input id="login" />
			</cell>
		</row>
		<row>
			<cell>
				<label text="I18N.get('field_password')" />
			</cell>
			<cell>
				<input id="pass" password="true" />
			</cell>
		</row>
		<row>
			<cell colspan="2" fill="">
				<table>
					<row>
						<cell expandX="">
							<button text="I18N.get('dialog_create')" onchange="main.show(Screen.ACCOUNTCREATE)" />
						</cell>
						<cell expandX="">
							<button id="l" text="I18N.get('dialog_login')" onchange="co.login($login.getText(), $pass.getText());" />
						</cell>
					</row>
				</table>
			</cell>
		</row>
	</table>
</layout>