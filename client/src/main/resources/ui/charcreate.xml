<layout id="root" fillParent="true" xmlns="dynLayout" init="state.create(); $ss=state.shared(); $sb=state.base(); $basePoints=state.points().base; $input={};">
	<table fillParent="true">
		<row>
			<cell colspan="2">
				<label id="info" />
			</cell>
		</row>
		<row>
			<cell>
				<label text="'Name'" />
			</cell>
			<cell>
				<input id="name" text="$ss.name" />
			</cell>
		</row>
		<row>
			<cell expandX="">
				<button text="'Cancel'" onchange="main.show(Screen.CHARSELECT)" />
			</cell>
			<cell expandX="">
				<button text="'Ok'" onchange="co.createChar($name.getText())" />
			</cell>
		</row>
	</table>
</layout>