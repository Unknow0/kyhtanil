<layout id="root" fillParent="true" xmlns="dynLayout">
	<table fillParent="true">
		<row>
			<cell colspan="2">
				<label id="info" />
			</cell>
		</row>
		<row>
			<cell>
				<label text="'Name'" />
			</cell>
			<cell>
				<input id="name" />
			</cell>
		</row>
		<row>
			<cell expandX="">
				<button text="i18n.get('dialog_cancel')" onchange="main.show(Screen.CHARSELECT)" />
			</cell>
			<cell expandX="">
				<button text="i18n.get('dialog_create')" onchange="co.createChar($name.getText())" />
			</cell>
		</row>
	</table>
</layout>