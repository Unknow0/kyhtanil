<layout fillParent="true" xmlns="dynLayout" onkeypress="if(e.getKeyCode()==com.badlogic.gdx.Input.Keys.ENTER) {co.createAccount($login.getText(), $pass.getText());}">
	<table fillParent="true" id="table" init="$table.defaults().pad(1)">
		<row>
			<cell colspan="2">
				<label id="info" />
			</cell>
		</row>
		<row>
			<cell>
				<label text="i18n.get('ui/field_login')" />
			</cell>
			<cell>
				<input id="login" />
			</cell>
		</row>
		<row>
			<cell>
				<label text="i18n.get('ui/field_password')" />
			</cell>
			<cell>
				<input id="pass" password="true" />
			</cell>
		</row>
		<row>
			<cell colspan="2" fill="">
				<table>
					<row>
						<cell expandX="">
							<button text="i18n.get('ui/dialog_cancel')" onchange="main.show(Screen.LOGIN)" />
						</cell>
						<cell expandX="">
							<button id="l" text="i18n.get('ui/dialog_create')" onchange="co.createAccount($login.getText(), $pass.getText());" />
						</cell>
					</row>
				</table>
			</cell>
		</row>
	</table>
</layout>