<assembly>
	<id>sync</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<includes>
				<include>unknow.kyhtanil:client-desktop</include>
			</includes>
			<binaries>
				<outputDirectory>kyhtanil</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>true</includeDependencies>
				<attachmentClassifier>shaded</attachmentClassifier>
				<outputFileNameMapping>client.jar</outputFileNameMapping>
				<dependencySets>
					<dependencySet>
						<outputDirectory>kyhtanil/lib</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>unknow.kyhtanil:kyhtanil-data</include>
			</includes>
			<binaries>
				<includeDependencies>true</includeDependencies>
				<outputDirectory>lib</outputDirectory>
				<dependencySets>
					<dependencySet>
						<scope>provided</scope>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>kyhtanil-data/target/sync/</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>kyhtanil/data</outputDirectory>
			<directory>kyhtanil-data/data</directory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>kyhtanil-data/sync.cfg</source>
		</file>
	</files>
</assembly>
